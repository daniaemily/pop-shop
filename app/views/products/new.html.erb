<h1>New Product</h1>
<p>Add new product to website</p>


<%= form_with scope: :product, url: products_path, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.label :image_url %><br>
    <%= form.text_field :image_url %>
  </p>

  <p>
    <%= form.label :asking_price %><br>
    <%= form.text_field :asking_price %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
